
<div class="container pt-5 col-4">
 <h1 style="font-size: 30px;">Welcome to the <%= @list.name %> movie</h1>
</div>

<div class="container pt-5 col-4">
  <div class="card">
    <% if @list.photo.key %>
      <%= cl_image_tag @list.photo.key %>
    <% else %>
      <%= image_tag 'https://res.cloudinary.com/dwoz78u8z/image/upload/v1661513495/kksgxdj5efn7leuvtcs8.jpg', height: 300, width: 400, crop: :fill %>
    <% end %>
  </div>
</div>

<div class="container pt-5 col-4 buttons">
  <%= link_to 'Back on main page', lists_path, class: 'btn btn-success text-white', style: 'margin: 10px;'  %>
  <%= link_to 'Edit the List', edit_list_path, class: 'btn btn-success text-white', style: 'margin: 10px;' %>
  <%= link_to 'Delete the list', @list , data: {  turbo_method: :delete, turbo_confirm: 'Are you sure?' },  class: 'btn btn-success text-white', style: 'margin: 10px;' %>
</div>

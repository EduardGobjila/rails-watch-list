<div class="banner">
  <div class="container pt-5 col-4 banner">
    <h1>All Movie Lists</h1>
    <%= link_to 'Create a list', new_list_path, class: 'btn btn-success text-white', style: 'margin: 10px;' %>
  </div>
</div>

<div class="container pt-5 col-4">
  <div class="card-index">
    <% @lists.each do |list| %>
    <% if list.photo.key %>
      <%=  cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>
    <% else %>
      <%= image_tag 'https://res.cloudinary.com/dwoz78u8z/image/upload/v1661513495/kksgxdj5efn7leuvtcs8.jpg', height: 300, width: 400, crop: :fill %>
    <% end %>
    <%= link_to list.name, list_path(list), class: 'btn btn-danger text-white', style: 'margin: 10px;' %> <br>
    <% end %>
  </div>
</div>
